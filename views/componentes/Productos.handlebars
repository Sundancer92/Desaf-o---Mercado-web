{{!  MODAL  }}
<div
	class="modal fade"
	id="exampleModal"
	tabindex="-1"
	aria-labelledby="exampleModalLabel"
	aria-hidden="false"
>
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Tu carrito:</h5>

				<button
					type="button"
					class="btn-close"
					data-bs-dismiss="modal"
					aria-label="Close"
				></button>
			</div>
			<div class="modal-body">
				<div class="row">
					{{!  HELPER EACH con los items en el carrito }}
					{{#each carrito}}
						<div class="col-4 text-center mb-1">
							<div class="card">
								<div class="card-body">
									<h5 class="card-title">{{this}}</h5>
									<img
										src="/{{this}}.png"
										class="card-img-top"
										alt="{{this}}"
									/>
									<a
										href="/restar/:{{@index}}"
										class="btn btn-danger"
										id="restar"
									>Borrar</a>
								</div>
							</div>
						</div>
					{{else}}
						<div class="col-12 text-center">
							<p class="text-danger">No hay productos en el carrito</p>
						</div>
					{{/each}}
				</div>
			</div>
		</div>
	</div>
</div>